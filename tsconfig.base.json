{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@react-monorepo/data-access": ["libs/shared/data-access/src/index.ts"],
      "@react-monorepo/data-access/server": [
        "libs/shared/data-access/src/server.ts"
      ],
      "@react-monorepo/design-system": ["libs/web/design-system/src/index.ts"],
      "@react-monorepo/design-system/server": [
        "libs/web/design-system/src/server.ts"
      ],
      "@react-monorepo/feat-auth": ["libs/web/feat-auth/src/index.ts"],
      "@react-monorepo/feat-auth/server": ["libs/web/feat-auth/src/server.ts"],
      "@react-monorepo/feat-dashboard": [
        "libs/web/feat-dashboard/src/index.ts"
      ],
      "@react-monorepo/feat-dashboard/server": [
        "libs/web/feat-dashboard/src/server.ts"
      ],
      "@react-monorepo/libs": ["libs/src/index.ts"],
      "@react-monorepo/libs/server": ["libs/src/server.ts"],
      "@react-monorepo/my-new-lib": ["my-new-lib/src/index.ts"],
      "@react-monorepo/my-new-lib/server": ["my-new-lib/src/server.ts"],
      "@react-monorepo/orders": ["libs/orders/src/index.ts"],
      "@react-monorepo/products": ["libs/products/src/index.ts"],
      "@react-monorepo/shared": ["libs/src/index.ts"],
      "@react-monorepo/shared-components": [
        "libs/web/shared-components/src/index.ts"
      ],
      "@react-monorepo/shared-components/server": [
        "libs/web/shared-components/src/server.ts"
      ],
      "@react-monorepo/shared-ui": ["libs/shared/ui/src/index.ts"],
      "@react-monorepo/shared/server": ["libs/src/server.ts"],
      "@react-monorepo/types": ["libs/shared/types/src/index.ts"],
      "@react-monorepo/types/server": ["libs/shared/types/src/server.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
