{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@react-monorepo/data-access": ["libs/shared/data-access/src/index.ts"],

      "@react-monorepo/design-system": ["libs/web/design-system/src/index.ts"],

      "@react-monorepo/design-system/components": [
        "libs/web/design-system/src/components/index.ts"
      ],
      "@react-monorepo/design-system/validators": [
        "libs/web/design-system/src/lib/validators/index.ts"
      ],
      "@react-monorepo/design-system/core": [
        "libs/web/design-system/src/core/index.ts"
      ],

      "@react-monorepo/feat-auth": ["libs/web/feat-auth/src/index.ts"],
      "@react-monorepo/feat-auth/server": [
        "libs/web/feat-auth/src/server.ts"
      ],

      "@react-monorepo/feat-dashboard": [
        "libs/web/feat-dashboard/src/index.ts"
      ],

      "@react-monorepo/feat-nav": ["libs/web/feat-nav/src/index.ts"],

      "@react-monorepo/libs": ["libs/src/index.ts"],

      "@react-monorepo/libs/shared/types": ["libs/shared/types/src/index.ts"],

      "@react-monorepo/orders": ["libs/orders/src/index.ts"],
      "@react-monorepo/products": ["libs/products/src/index.ts"],
      "@react-monorepo/shared": ["libs/src/index.ts"],
      "@react-monorepo/shared-components": [
        "libs/web/shared-components/src/index.ts"
      ],
      "@react-monorepo/shared-ui": ["libs/shared/ui/src/index.ts"],
      "@react-monorepo/shared/types": ["libs/shared/types/src/index.ts"],

    }
  },
  "exclude": ["node_modules", "tmp"]
}
